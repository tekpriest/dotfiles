{
  "neodev": {
    "library": {
      "enabled": true,
      "plugins": [
        "neoconf.nvim",
        "nvim-lspconfig"
      ]
    }
  },
  "neoconf": {
    "plugins": {
      "lua_ls": {
        "enabled": true
      }
    }
  },
  "lspconfig": {
    "lua_ls": {
      "Lua.hint.enable": true,
      "Lua.workspace.checkThirdParty": false
    },
    "tsserver": {
      "typescript.tsserver.watchOptions": {
        "watchDirectory": "useFsEvents"
      }
    }
  }
}
